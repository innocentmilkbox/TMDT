@model IEnumerable<PhoneShop.Models.Domain.Product>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table id="tbl1" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Categories.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.productName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PriceIn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PriceOut)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.imgPath)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SoldCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stocked)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.latestPurchase)
                </th>
                <th>Actions</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Categories.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceIn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceOut)
                </td>
                <td>                    
                    <img src="~/images/@item.imgPath" title="@item.productName" class="img-thumbnail" width="100" height="100" alt=@item.productName />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoldCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stocked)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.latestPurchase)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</body>
</html>

@section scripts
{
    
    
    <script>
        $(document).ready(function () {
            $("#tbl1").DataTable();
        })
    </script>
}
